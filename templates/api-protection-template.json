{
  "policy": {
    "name": "API-Protection-Template",
    "applicationLanguage": "utf-8",
    "enforcementMode": "blocking",
    "template": {
      "name": "POLICY_TEMPLATE_RAPID_DEPLOYMENT"
    },
    "apiProtection": {
      "enableJsonValidation": true,
      "enableXmlValidation": true,
      "enforceContentType": true,
      "validateParameters": true
    },
    "blockingSettings": {
      "violations": [
        { "name": "VIOL_JSON_MALFORMED", "alarm": true, "block": true },
        { "name": "VIOL_XML_FORMAT", "alarm": true, "block": true },
        { "name": "VIOL_PARAMETER_VALUE_METACHAR", "alarm": true, "block": true },
        { "name": "VIOL_OPEN_API_VIOLATION", "alarm": true, "block": true }
      ]
    },
    "signatureSettings": {
      "signatureStaging": true
    },
    "description": "Generic API protection policy template for REST/JSON and XML-based services."
  }
}
